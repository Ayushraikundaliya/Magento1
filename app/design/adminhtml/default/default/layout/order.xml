<?xml version="1.0" encoding="UTF-8"?>
<layout>
    <adminhtml_order_index>
        <reference name="content">
            <block type="order/adminhtml_order" name="order"/>
        </reference>
    </adminhtml_order_index>
    <adminhtml_order_customer>
        <reference name="content">
            <block type="order/adminhtml_order_customer" name="customer.grid" />
        </reference>
    </adminhtml_order_customer>
	
    <adminhtml_order_new>
        <reference name="content">
            <block type="order/adminhtml_order_cart" name="cart" template="order/adminhtml/cart.phtml">
                <block type="order/adminhtml_order_cart_item" template="order/adminhtml/cart/item.phtml" name="item"></block>
                <block type="order/adminhtml_order_cart_product" name="product" template="order/adminhtml/cart/product.phtml"/>
                <block type="order/adminhtml_order_cart_billing" template="order/adminhtml/cart/billing.phtml" name="billing"></block>
                <block type="order/adminhtml_order_cart_shipping" template="order/adminhtml/cart/shipping.phtml" name="shipping"></block>
                <block type="order/adminhtml_order_cart_paymentmethod" name="paymentmethod" template="order/adminhtml/cart/paymentmethod.phtml"/>
                <block type="order/adminhtml_order_cart_shippingmethod" name="shippingmethod" template="order/adminhtml/cart/shippingmethod.phtml"/>
                <block type="order/adminhtml_order_cart_customer" name="customer" template="order/adminhtml/cart/customer.phtml"/>
                <block type="order/adminhtml_order_cart_total" name="total" template="order/adminhtml/cart/total.phtml"/>
            </block>
        </reference>
    </adminhtml_order_new>
    

</layout>